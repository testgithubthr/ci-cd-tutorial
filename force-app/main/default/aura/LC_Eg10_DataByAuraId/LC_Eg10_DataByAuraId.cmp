<aura:component >
	<lightning:card title="Employee Information" >
        
    	<aura:set attribute="footer" >
            <lightning:button label="Submit" onclick="{!c.callMe}" />
        </aura:set>
        
        <lightning:input label="Enter the Employee Number" aura:id="empName" type="Text"/>
        <lightning:input label="Enter the Employee age" aura:id="empAge" type="number"/>
        <lightning:input label="Enter the Employee Salary" aura:id="empSalary" type="Decimal"/>
        
    </lightning:card>
</aura:component>